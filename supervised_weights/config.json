{
    "name": "LozengeTrain",
    "n_gpu": 0,
    "scheme": "supervised",
    "arch": {
        "type": "LocalizationModel",
        "args": {}
    },
    "data_loader": {
        "type": "LozengeTrainLoader",
        "args": {
            "batch_size": 32,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "r2"
    ],
    "lr_scheduler": {
        "type": "ReduceLROnPlateau",
        "args": {
            "min_lr": 0.0001,
            "patience": 5,
            "factor": 0.999
        }
    },
    "trainer": {
        "epochs": 12,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 10,
        "tensorboard": true
    }
}